<mvc:View
  xmlns:m="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:t="sap.ui.table"
  xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
  controllerName="ris.controller.Main">
  <m:VBox class="sapUiSizeCompact">

    <t:Table
      id="table"
      selectionMode="None"
      rows="{
            path: '/books',
            sorter: {
              path: 'ReadingDate',
              descending: true
            }
            }"
      sort="ReadingDate"
      ariaLabelledBy="title">
      <t:extension>
      </t:extension>
      <t:columns>
        <t:Column
          id="Id"
          width="4rem"
          sortProperty="Id">
          <t:template>
            <m:Button
              press="handleBookPress"
              icon="sap-icon://course-book"
              app:Title="{Title}"
              app:Author="{Author}"
              app:State="{State}"
              app:Genre="{Genre}"
              app:ReadingDate="{ReadingDate}"
              app:Image="{Image}"
            />
          </t:template>
        </t:Column>
        <t:Column
          id="Title"
          width="11rem"
          sortProperty="Title">
          <m:Label text="Título"/>
          <t:template>
            <m:Text text="{Title}" wrapping="false"/>
          </t:template>
        </t:Column>
        <t:Column
          id="Author"
          width="11rem"
          sortProperty="Author">
          <m:Label text="Autor"/>
          <t:template>
            <m:Text text="{Author}" wrapping="false"/>
          </t:template>
        </t:Column>
        <t:Column
          id="State"
          width="11rem"
          sortProperty="State">
          <m:Label text="Estado"/>
          <t:template>
            <m:Text text="{State}" wrapping="false"/>
          </t:template>
        </t:Column>
        <t:Column
          id="Genre"
          width="11rem"
          sortProperty="Genre">
          <m:Label text="Género"/>
          <t:template>
            <m:Text text="{Genre}" wrapping="false"/>
          </t:template>
        </t:Column>
        <t:Column
          id="ReadingDate"
          width="11rem"
          sortProperty="ReadingDate">
          <m:Label text="Fecha de lectura"/>
          <t:template>
            <m:Text text="{
								path: 'ReadingDate',
								type: 'sap.ui.model.type.Date',
								formatOptions: {source: {pattern: 'dd/MM/yyyy'}, style: 'long'}
							}" wrapping="false"/>
          </t:template>
        </t:Column>
      </t:columns>
    </t:Table>
  </m:VBox>
</mvc:View>
