<c:FragmentDefinition
        xmlns:m="sap.m"
        xmlns:c="sap.ui.core"
        xmlns:f="sap.ui.layout.form">
  <f:SimpleForm>
    <f:content>
      <m:Label text="{i18n>CODIGO}"/>
      <m:Select selectedKey="{/form1/idfabrica}"
                items="{
                  path: '/data/masterdata/fabricas',
                  sorter: { path: 'nombrecompleto' }
                }">
        <c:Item text="{idfabrica} - {nombrecompleto}" key="{idfabrica}"/>
      </m:Select>
    </f:content>
  </f:SimpleForm>
  <m:Toolbar>
    <m:Button text="{i18n>CLEAR}" press="handleCancel"/>
    <m:ToolbarSpacer/>
    <m:Button text="{i18n>FIND}" type="Emphasized" press="handleFind"/>
  </m:Toolbar>
</c:FragmentDefinition>
